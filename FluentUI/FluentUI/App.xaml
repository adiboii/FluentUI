            <!-- Light Mode -->
            <!-- Primary Button -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="TextColor" Value="{StaticResource White}"/>
                <Setter Property="BackgroundColor" Value="{StaticResource ThemePrimary}"/>
                <!-- Font Family -->
                <!-- Font Size -->
                <!-- Font Attributes -->
                <Setter Property="CornerRadius" Value="2"/>
                <!-- Character Spacing -->
                <Setter Property="TextTransform" Value="Uppercase"/>

                <!-- The WidthRequest and HeightRequest properties are not identical with the Figma design -->
                <!-- The properties are changed to align the button's text at the center -->
                <Setter Property="WidthRequest" Value="94"/>
                <Setter Property="HeightRequest" Value="40"/>
                <Setter Property="Text" Value="Default"/>
            </Style>

