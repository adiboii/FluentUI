        <StackLayout
            VerticalOptions="Start"
            HorizontalOptions="Center"
            Padding="0, 20"
            Spacing="20">
            <Label Text="Persona Components"
                    FontAttributes="Bold"
                   FontSize="20"/>
            
            <components:FluentPersona
                Name="Adrian Paul Reyes"/>

            <components:FluentPersona
                Name="Adrian Paul Reyes Jr."
                Source="profile.png"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>