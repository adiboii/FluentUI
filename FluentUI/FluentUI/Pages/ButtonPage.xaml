<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:components="clr-namespace:FluentUI.Components"
             x:Class="FluentUI.Pages.ButtonPage">
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="Start"
            HorizontalOptions="Center"
            Padding="0, 20"
            Spacing="20">
            <Label Text="Button Components"
                    FontAttributes="Bold"
                   FontSize="20"
                  />
            <components:FluentPrimaryButton
                Text="DEFAULT"
                
                />
            <components:FluentTextButton
                Text="DEFAULT"
                />
            <components:FluentPrimaryButton
                Text="DEFAULT"
                DarkMode="True"/>
            <components:FluentTextButton
                Text="DEFAULT"
                DarkMode="True"/>
            <components:FluentPrimaryButton
                Text="DEFAULT"
                DarkMode="False"/>
            <components:FluentTextButton
                Text="DEFAULT"
                DarkMode="False"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>